<section class="container-sm mt-5">
    <h1>Edit <%= medicalData.term %>
    </h1>

    <form action="/edit/<%= medicalData._id %>?_method=PUT" method="POST" id="myForm" class="form">
        <div class="mb-3">
            <label>Medical Term</label>
            <input name="term" id="term" type="text" class="form-control" value="<%= medicalData.term %>" />
            <div class="valid-feedback">
                This word exists in the Medical Term
            </div>
        </div>
        <div class="mb-3">
            <label>Description</label>
            <input name="definition" id="definition" type="text" class="form-control"
                value="<%= medicalData.definition %>" />
        </div>
        <div class="mb-3">
            <select name="category" id="category" type="text" class="form-select" required>
                <option value="<%= medicalData.category%>" selected>Add the category</option>
                <option value="Term with no root">Terms with no root</option>
                <option value="Term with no prefix">Terms with no prefix</option>
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update Term</button>
            <button type="submit" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
                data-bs-target="#deleteModal">Delete</button>
        </div>
    </form>

</section>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a medical record.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    This will remove the record of <b class="fw-bold">
                        <%= medicalData.term %>
                    </b><br />
                    Are you sure?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/edit/<%= medicalData._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes, Remove Medical Term</button>
                </form>
            </div>
        </div>
    </div>
</div>